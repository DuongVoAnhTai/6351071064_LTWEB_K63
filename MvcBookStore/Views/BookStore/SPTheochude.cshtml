@model IEnumerable<MvcBookStore.Models.Entities.SACH>
@{
    ViewBag.Title = "SPTheochude";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>SACH THEO CHU DE</h1>

<div class="row">
    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <a href="@Url.Action("Details", "BookStore", new {id = sach.Masach})">
                <img alt="@sach.Tensach" src="~/Content/images/1.png" />
                @*<img src="~/Content/images/1.png"/>*@

                <div>
                    <br />
                    <h4 style="text-align: center">
                        <span>@sach.Tensach</span>
                    </h4>
                </div>
            </a>
        </div>
    }

</div>

