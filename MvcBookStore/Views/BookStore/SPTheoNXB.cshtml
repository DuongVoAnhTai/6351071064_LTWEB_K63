@model IEnumerable<MvcBookStore.Models.Entities.NHAXUATBAN>
@{
    ViewBag.Title = "SPTheoNXB";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>SACH THEO NHA XUAT BAN</h1>
<div class="row">
    @foreach (var nhaxuatban in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <a href="@Url.Action("Details", "BookStore", new {id = nhaxuatban.MaNXB})">
                <img alt="@nhaxuatban.TenNXB" src="~/Content/images/1.png" />
                @*<img src="~/Content/images/1.png"/>*@

                <div>
                    <br />
                    <h4 style="text-align: center">
                        <span>@nhaxuatban.TenNXB</span>
                    </h4>
                </div>
            </a>
        </div>
    }

</div>

